<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView

        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_commit"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="13sp"
                android:textColor="@color/color_txt_main1"
                android:text="补充私人教练信息："
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:id="@+id/tv_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tips"
                android:textSize="16sp"
                android:textColor="@color/color_txt_main1"
                android:text="姓名"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_name_label"
                app:layout_constraintLeft_toRightOf="@+id/tv_name_label"
                android:layout_marginEnd="20dp"
                android:maxLength="14"
                android:gravity="end"
                android:hint="请输入微信实名认证姓名"
                android:textSize="16sp"
                android:textColor="@color/color_txt_main1"
                android:textColorHint="@color/color_txt_main3"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                />

            <TextView
                android:id="@+id/tv_id_card_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_label"
                android:textSize="16sp"
                android:textColor="@color/color_txt_main1"
                android:text="身份证号码"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <EditText
                android:id="@+id/et_id_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_id_card_label"
                app:layout_constraintLeft_toRightOf="@+id/tv_id_card_label"
                android:layout_marginEnd="20dp"
                android:maxLength="20"
                android:inputType="number"
                android:gravity="end"
                android:hint="请输入微信实名认证身份证号码"
                android:textSize="16sp"
                android:textColor="@color/color_txt_main1"
                android:textColorHint="@color/color_txt_main3"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                />


            <TextView
                android:id="@+id/tv_certification_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_id_card_label"
                android:textSize="16sp"
                android:textColor="@color/color_txt_main1"
                android:text="资质证书"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_certification_label"
                />

            <View
                android:id="@+id/v_h"
                android:layout_width="0dp"
                android:layout_height="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view"
                android:layout_marginTop="20dp"
                android:background="@color/color_bg_main3"/>

            <TextView
                android:id="@+id/tv_tips_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_h"
                android:textSize="13sp"
                android:textColor="@color/color_txt_main1"
                android:text="补充学员信息："
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:id="@+id/tv_student_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tips_1"
                android:textSize="16sp"
                android:textColor="@color/color_txt_main1"
                android:text="学员真实姓名"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <EditText
                android:id="@+id/et_student_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@+id/v_v"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_student_name_label"
                app:layout_constraintLeft_toRightOf="@+id/tv_student_name_label"
                android:layout_marginEnd="18dp"
                android:maxLength="14"
                android:gravity="end"
                android:hint="学员姓名"
                android:textSize="16sp"
                android:textColor="@color/color_txt_main1"
                android:textColorHint="@color/color_txt_main3"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                />

            <View
                android:id="@+id/v_v"
                android:layout_width="1dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/tv_student_name_label"
                app:layout_constraintBottom_toBottomOf="@+id/tv_student_name_label"
                app:layout_constraintRight_toLeftOf="@+id/iv_student_icon"
                android:layout_marginEnd="18dp"
                android:background="@color/color_bg_main3"/>

            <ImageView
                android:id="@+id/iv_student_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@color/color_main"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_student_name_label"
                app:layout_constraintBottom_toBottomOf="@+id/tv_student_name_label"
                android:layout_marginEnd="20dp"
                />

            <TextView
                android:id="@+id/tv_student_id_card_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_student_name_label"
                android:textSize="16sp"
                android:textColor="@color/color_txt_main1"
                android:text="学员身份证号码"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <EditText
                android:id="@+id/et_student_id_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_student_id_card_label"
                app:layout_constraintLeft_toRightOf="@+id/tv_student_id_card_label"
                android:layout_marginEnd="20dp"
                android:maxLength="20"
                android:inputType="number"
                android:gravity="end"
                android:hint="学员身份证号码"
                android:textSize="16sp"
                android:textColor="@color/color_txt_main1"
                android:textColorHint="@color/color_txt_main3"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                />

            <TextView
                android:id="@+id/tv_student_phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_student_id_card_label"
                android:textSize="16sp"
                android:textColor="@color/color_txt_main1"
                android:text="学员手机号码"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                />

            <EditText
                android:id="@+id/et_student_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_student_phone_label"
                app:layout_constraintLeft_toRightOf="@+id/tv_student_phone_label"
                android:layout_marginEnd="20dp"
                android:maxLength="11"
                android:inputType="phone"
                android:gravity="end"
                android:hint="学员手机号码"
                android:textSize="16sp"
                android:textColor="@color/color_txt_main1"
                android:textColorHint="@color/color_txt_main3"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <Button
        android:id="@+id/btn_commit"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="去邀请"
        />
</androidx.constraintlayout.widget.ConstraintLayout>