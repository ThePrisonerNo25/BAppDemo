<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#313340">
    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@color/colorAccent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一步台阶测试"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <com.example.yangchaoming.bappdemo.step_test.view.TimeProgressView
        android:id="@+id/time_progress"
        android:layout_width="220dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_head"
        app:layout_constraintBottom_toTopOf="@+id/btn_start"
        app:layout_constraintVertical_bias="0.48"
        />

    <!--<com.example.yangchaoming.bappdemo.step_test.view.HeartRateProgressView-->
        <!--android:id="@+id/time_progress"-->
        <!--android:layout_width="220dp"-->
        <!--android:layout_height="200dp"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/rl_head"-->
        <!--app:layout_constraintBottom_toTopOf="@+id/btn_start"-->
        <!--app:layout_constraintVertical_bias="0.48"-->
        <!--/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#747583"
        android:text="请打开手机扬声器，播放节拍声音"
        app:layout_constraintTop_toBottomOf="@+id/time_progress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="26dp"/>

    <com.example.yangchaoming.bappdemo.step_test.view.ButtonStartView
        android:id="@+id/btn_start"
        android:layout_width="88dp"
        android:layout_height="88dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"
        ></com.example.yangchaoming.bappdemo.step_test.view.ButtonStartView>

    <Button
        android:id="@+id/btn_restart"
        android:layout_width="88dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="@+id/btn_start"
        app:layout_constraintBottom_toBottomOf="@+id/btn_start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_start"
        android:text="重新开始"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:background="@drawable/shape_gray_solid_r_22"
        />
    <Button
        android:id="@+id/btn_skip"
        android:layout_width="88dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="@+id/btn_start"
        app:layout_constraintBottom_toBottomOf="@+id/btn_start"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_start"
        android:text="直接跳过"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:background="@drawable/shape_gray_solid_r_22"
        />
</androidx.constraintlayout.widget.ConstraintLayout>