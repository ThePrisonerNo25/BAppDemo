<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.example.yangchaoming.bappdemo.demo1.widget.LikesWrapContainer
        android:id="@+id/like_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.yangchaoming.bappdemo.demo1.widget.LikesWrapContainer>
    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"/>

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"/>

    <TextView
        android:id="@+id/tv_color_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello colorSting"/>

    <com.example.yangchaoming.bappdemo.demo1.widget.CommentViewGroup
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"></com.example.yangchaoming.bappdemo.demo1.widget.CommentViewGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/shape_gray_stoke_4"
        />
</LinearLayout>